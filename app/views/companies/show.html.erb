<%= render '/static_pages/nav' %>

<p id="notice"><%= notice %></p>

<div class="container">

<!-- Middle Container that has Picture, Funding Info, Basic Company Info, including location, 
brief description, Founding Date, Categories, Website-->
  
  <div class="row">
    <div class="col-md-12" style="background-color:white;">
    <h1 class="text-center"><%= @company.name %></h1>

    <p class="text-center">
      <%= @company.description %>
    </p>
    <p class="text-muted text-center">
      <%= @company.location %>
      &bull;
      <%= @company.category %>
      &bull;
      Founded in <%= @company.founded_date %>
    </p>


    <p>
      <strong>Main url:</strong>
      <%= @company.main_url %>
    </p>

    <p>
      <strong>Employee count:</strong>
      <%= @company.employee_count %>
    </p>

    <p>
  <strong>Twitter url:</strong>
  <%= @company.twitter_url %>
</p>

<p>
  <strong>Angellist url:</strong>
  <%= @company.angellist_url %>
</p>

<p>
  <strong>Crunchbase url:</strong>
  <%= @company.crunchbase_url %>
</p>



